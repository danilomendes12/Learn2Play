# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()
GET        /login               controllers.Application.loginPage()
GET        /signup              controllers.Application.signupPage()
GET        /userindex           controllers.Application.userIndex()

#User activities
GET        /api/login           controllers.UserActivity.login(email: String ?="", password: String ?="")
GET        /api/signup          controllers.UserActivity.signup(name: String?="", nickname: String?="", email: String?="", password: String?="")

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
